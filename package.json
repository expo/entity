{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tsc": "tsc --build",
    "build": "tsc --build",
    "clean": "yarn build --clean",
    "lint": "eslint .",
    "lint-fix": "yarn lint --fix",
    "test": "yarn test:unit",
    "test:unit": "yarn test:all --selectProjects unit",
    "test:all": "yarn build --noCheck && DEBUG=testcontainers:pull jest",
    "integration": "yarn test:all --selectProjects integration",
    "integration:all": "yarn integration",
    "prepack": "yarn build",
    "ctix": "ctix build && ./prepend-barrels.sh",
    "typedoc": "yarn build && typedoc"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.10.0",
    "@types/node": "20.19.1",
    "ctix": "^2.7.1",
    "eslint": "^9.29.0",
    "eslint-config-universe": "^15.0.3",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jest": "^30.0.0",
    "lerna": "^8.2.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "testcontainers": "^11.0.3",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "20.14.0"
  },
  "packageManager": "yarn@4.6.0"
}
